@model dynamic
@{
    ViewBag.Title = "Hello World";
}

<var name="g_accountnumber" />


<form id="main">
<block>
        <prompt bargein="false">
            Hello, welcome to Meracord Contractual Payment Services.
        </prompt>
        <!-- Move to the account sign-in form -->
        <goto next="#account" />
    </block>
</form>

<form id="account">
    <field name="account_number" type="digits">
        <grammar mode="dtmf" src="builtin:dtmf/digits" version="1.0"/>
        <prompt bargein="dtmf_only">
            Use your telephone keypad to enter your account number, followed by the pound key.
        </prompt>
    </field>
    <filled>
        <prompt>
            <assign name="g_accountnumber" expr="account_number" />
            You have entered <value expr="account_number" />. 
            This is saved as value <value expr="g_accountnumber" />.
        </prompt>
        <goto next="#pin" />
    </filled>
</form>

<form id="pin">
<field name="pin_number">
        <grammar mode="dtmf" src="builtin:dtmf/digits" version="1.0"/>
        <prompt bargein="dtmf_only">
            Use your telephone keypad to enter your pin, followed by the pound key.
        </prompt>
    </field>
    <filled>
        <prompt>
            Welcome to account <value expr="g_accountnumber" />, also known as <value expr="account_number" />.
        </prompt>
    </filled>
</form>